{
  "manifest_version": 3,
  "name": "GPT Prompt Manager",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "description": "Adds a prompt manager on top of GPT providing accessiblity and increasing efficiency ",
  "author": "Akshay Pratap Singh (https://github.com/AkshayPratapSingh09)",
  "homepage_url": "https://github.com/AkshayPratapSingh09/gpt-prompt-manager",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ]
}
